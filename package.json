{
  "name": "tengable-releases",
  "version": "1.0.0",
  "main": "./main.js",
  "repository": "git@github.com:Tengable/tengable-releases.git",
  "author": "Eric Wooley <ericwooley@gmail.com>",
  "license": "MIT",
  "description": "Tengable: Distributed Company Culture",
  "scripts": {
    "make": "ts-node ./scripts/build.ts",
    "build:app": "shx mkdir -p build && concurrently 'yarn build:ts' 'yarn copyAssets'&& node scripts/genPackageJson.js && yarn dist",
    "build:ts": "tsc",
    "dev": "NODE_ENV=development electron ./build/main.js",
    "copyAssets": "shx cp -rf src/assets/ build/assets",
    "watch": "concurrently 'npm-watch' 'tsc --watch'",
    "pack": "electron-builder --dir build",
    "dist": "electron-builder"
  },
  "watch": {
    "copyAssets": "./src/assets/**/*",
    "dev": "./build/**/*.js"
  },
  "build": {
    "productName": "Tengable",
    "copyright": "Copyright Â© 2020 Tengable LLC",
    "electronCompile": false,
    "npmRebuild": false,
    "asar": true,
    "appId": "com.tengable.desktop",
    "directories": {
      "app": "./build"
    },
    "publish": {
      "owner": "Tengable",
      "repo": "tengable-releases",
      "releaseType": "prerelease",
      "provider": "github"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "artifactName": "Tengable.AppImage",
      "icon": "./build/assets/icon.png",
      "category": "Productivity"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "./build/assets/icon.png",
      "entitlements": "build/assets/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please give us access to your microphone"
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "msi",
        "zip"
      ],
      "icon": "./build/assets/icon.png",
      "publisherName": "Tengable LLC"
    }
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/electron-store": "^3.2.0",
    "@types/lodash": "^4.14.167",
    "@types/shelljs": "^0.8.8",
    "concurrently": "^5.3.0",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "npm-watch": "^0.7.0",
    "shelljs": "^0.8.4",
    "shx": "^0.3.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "electron-devtools-installer": "^3.1.1",
    "electron-log": "^4.3.1",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "lodash": "^4.17.20"
  }
}
